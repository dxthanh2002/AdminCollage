@model Admin.Models.Admission

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Admission</h4>
<hr />
<div class="card card-default">
    <div class="card-header">
        <h3 class="card-title">Create Admission</h3>
        <div class="card-tools">
            <button type="button" class="btn btn-tool" data-card-widget="collapse">
                <i class="fas fa-minus"></i>
            </button>
            <button type="button" class="btn btn-tool" data-card-widget="remove">
                <i class="fas fa-times"></i>
            </button>
        </div>
    </div>
    <div class="card-body">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="FatherName" class="control-label"></label>
                        <input asp-for="FatherName" class="form-control" />
                        <span asp-validation-for="FatherName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="MotherName" class="control-label"></label>
                        <input asp-for="MotherName" class="form-control" />
                        <span asp-validation-for="MotherName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Dob" class="control-label"></label>
                        <input asp-for="Dob" class="form-control" />
                        <span asp-validation-for="Dob" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Gender" class="control-label"></label>
                        <select asp-for="Gender" class="form-control select2bs4">
                            <option selected="selected">M</option>
                            <option>F</option>
                            <option>O</option>
                        </select>
                        <span asp-validation-for="Gender" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ResAddress" class="control-label"></label>
                        <input asp-for="ResAddress" class="form-control" />
                        <span asp-validation-for="ResAddress" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="PerAddress" class="control-label"></label>
                        <input asp-for="PerAddress" class="form-control" />
                        <span asp-validation-for="PerAddress" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="AdmissionFor" class="control-label"></label>
                        <input asp-for="AdmissionFor" class="form-control" />
                        <span asp-validation-for="AdmissionFor" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="University" class="control-label"></label>
                        <input asp-for="University" class="form-control" />
                        <span asp-validation-for="University" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="EnrollmentNumber" class="control-label"></label>
                        <input asp-for="EnrollmentNumber" class="form-control" />
                        <span asp-validation-for="EnrollmentNumber" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Center" class="control-label"></label>
                        <input asp-for="Center" class="form-control" />
                        <span asp-validation-for="Center" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">

                    <div class="form-group">
                        <label asp-for="Stream" class="control-label"></label>
                        <input asp-for="Stream" class="form-control" />
                        <span asp-validation-for="Stream" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Field" class="control-label"></label>
                        <input asp-for="Field" class="form-control" />
                        <span asp-validation-for="Field" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="MarkSecured" class="control-label"></label>
                        <input asp-for="MarkSecured" class="form-control" />
                        <span asp-validation-for="MarkSecured" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="OutOf" class="control-label"></label>
                        <input asp-for="OutOf" class="form-control" />
                        <span asp-validation-for="OutOf" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ClassObtained" class="control-label"></label>
                        <input asp-for="ClassObtained" class="form-control" />
                        <span asp-validation-for="ClassObtained" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="SportDetail" class="control-label"></label>
                        <input asp-for="SportDetail" class="form-control" />
                        <span asp-validation-for="SportDetail" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Status" class="control-label"></label>
                        <select asp-for="Status" class="form-control select2bs4">
                            <option selected="selected">ACTIVE</option>
                            <option>INACTIVE</option>
                            <option>DELETED</option>
                            <option>PENDING</option>
                            <option>APPROVED</option>
                            <option>REJECTED</option>       
                        </select>
                        <span asp-validation-for="Status" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="CreatedAt" class="control-label"></label>
                        <input asp-for="CreatedAt" class="form-control" />
                        <span asp-validation-for="CreatedAt" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="CreatedById" class="control-label"></label>
                        <input asp-for="CreatedById" class="form-control" />
                        <span asp-validation-for="CreatedById" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="LastModifiedAt" class="control-label"></label>
                        <input asp-for="LastModifiedAt" class="form-control" />
                        <span asp-validation-for="LastModifiedAt" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="LastModifiedBy" class="control-label"></label>
                        <input asp-for="LastModifiedBy" class="form-control" />
                        <span asp-validation-for="LastModifiedBy" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                </div>
            </div>
            
            
            
        </form>
    </div>
    <div class="card-footer">
        <p>Press Save before leave page</p>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
