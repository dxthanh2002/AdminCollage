@model Admin.Models.Facility

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Facility</h4>
<hr />
<div class="card card-default">
    <div class="card-header">
        <h3 class="card-title">Create Facility</h3>
        <div class="card-tools">
            <button type="button" class="btn btn-tool" data-card-widget="collapse">
                <i class="fas fa-minus"></i>
            </button>
            <button type="button" class="btn btn-tool" data-card-widget="remove">
                <i class="fas fa-times"></i>
            </button>
        </div>
    </div>
    <div class="card-body">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="OpeningHour" class="control-label"></label>
                        <input asp-for="OpeningHour" class="form-control" />
                        <span asp-validation-for="OpeningHour" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ContactInformation" class="control-label"></label>
                        <input asp-for="ContactInformation" class="form-control" />
                        <span asp-validation-for="ContactInformation" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Status" class="control-label"></label>
                        <select asp-for="Status" class="form-control">
                            <option selected="selected">ACTIVE</option>
                            <option>INACTIVE</option>
                            <option>DELETED</option>
                            <option>PENDING</option>
                            <option>APPROVED</option>
                            <option>REJECTED</option>
                        </select>
                        <span asp-validation-for="Status" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="CreatedAt" class="control-label"></label>
                        <input asp-for="CreatedAt" class="form-control" />
                        <span asp-validation-for="CreatedAt" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="LastModifiedAt" class="control-label"></label>
                        <input asp-for="LastModifiedAt" class="form-control" />
                        <span asp-validation-for="LastModifiedAt" class="text-danger"></span>
                    </div>

                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="card card-outline card-info">
                        <div class="card-header">
                            <h3 class="card-title">
                                Description
                            </h3>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body">
                            <textarea asp-for="Description" id="editorr" class="col-md-12">
                                    Text a note in <strong>there!</strong>
                            </textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                        <div class="card-footer">
                            Write about description.
                        </div>
                    </div>
                </div>
                <!-- /.col-->
            </div>
            
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
    <div class="card-footer">
        <p>Save before leave page</p>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
